<%= render "layouts/errors", :object => @accommodation %>

<%= form_for [@place, @accommodation] do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :description %>
  <%= f.text_area :description %>
  <%= f.label :housing_type %>
  <%= f.text_field :housing_type %>
  <%= f.label :guests %>
  <%= f.text_field :guests %>
  <%= f.label :price %>
  <%= f.text_field :price %>
  <%= f.submit "Create Accommodation" %>
<% end %>
