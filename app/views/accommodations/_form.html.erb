<%= render "layouts/errors", :object => @accommodation %>

<%= form_for @accommodation do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :description %>
  <%= f.text_area :description %>
  <%= f.label :type %>
  <%= f.text_field :type %>
  <%= f.label :guests %>
  <%= f.text_field :guests %>
  <%= f.label :price %>
  <%= f.text_field :price %>
  <%= f.submit "Create Accommodation" %>
<% end %>
